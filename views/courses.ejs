    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #111827;
            color: #d1d5db;
        }
        .flip-container {
            perspective: 1000px;
            width: 100%;
            height: 250px;
            cursor: pointer;
        }
        .flipper {
            transition: transform 0.6s;
            transform-style: preserve-3d;
            position: relative;
            width: 100%;
            height: 100%;
        }
        .flip-container:hover .flipper {
            transform: rotateY(180deg);
        }
        .front, .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2), 0 4px 6px -2px rgba(0, 0, 0, 0.1);
            transition: transform 0.6s;
        }
        .front {
            background-color: #1f2937;
            z-index: 2;
        }
        .back {
            background-color: #4f46e5; /* Gamified purple */
            color: #ffffff;
            transform: rotateY(180deg);
        }
    </style>
</head>
