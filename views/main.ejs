    <script>
        const username = sessionStorage.getItem("loggedInUser");
        if (username) {
            setTimeout(() => {
                alert(`Welcome, ${username}!`);
                sessionStorage.removeItem("loggedInUser");
            }, 100);
        }

        document.addEventListener("DOMContentLoaded", () => {
          const loggedInUser = sessionStorage.getItem("loggedInUser");
          const navLoginOrProfile = document.getElementById("nav-login-or-profile");
      
          if (loggedInUser) {
            // Replace the login button with the profile button
            navLoginOrProfile.innerHTML = `
              <div class="dropdown">
                <button class="btn btn-primary-custom rounded-pill fw-bold px-4 py-2 dropdown-toggle" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
